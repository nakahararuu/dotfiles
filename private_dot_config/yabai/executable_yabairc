#!/usr/bin/env sh

# global settings
yabai -m config active_window_border_color   0xff1122ff
yabai -m config normal_window_border_color   0xffffffff
yabai -m config window_border_width          6
yabai -m config window_border_radius         12
yabai -m config window_border                on



# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  08
yabai -m config bottom_padding               08
yabai -m config left_padding                 08
yabai -m config right_padding                08
yabai -m config window_gap                   06
