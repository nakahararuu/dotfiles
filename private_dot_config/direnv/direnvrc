use_aws_profile(){
  profile_name=$1

  export AWS_ASSUME_ROLE_TTL=1h
  export $(aws-vault exec $profile_name --prompt=osascript -- env | grep AWS_ | grep -v AWS_VAULT)
}

use_aws_profile_with_saml(){
  profile_name=$1
  idp_account_name=$1

  eval $( $(which saml2aws) script --shell=bash --skip-prompt -a ${idp_account_name} -p ${profile_name})
}
